@model IEnumerable<PAvanzada.Models.Comidas>

@{
    ViewBag.Title = "List";
}

<div class="background" style="background-image: url('../../Content/Images/Ciudad-Z.jpg');">
    <div class="container">
        <div class="mini_container">

            <form class="form">
                <span class="form_title">
                    Lista de comidas del mes
                </span>

                <p>
                    @Html.ActionLink("Registrar comida del día", "Comidas")
                </p>

                <table class="table">
                    <tr>
                        <th>
                            <label>Fecha</label>
                        </th>
                        <th>
                            <label>Tipo de comida</label>
                        </th>
                        <th>
                            <label>Descripción</label>
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tipo_comida)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                        </tr>
                    }

                </table>
            </form>
        </div>
    </div>
</div>

