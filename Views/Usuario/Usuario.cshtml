@model PAvanzada.Models.Usuario

@{
    ViewBag.Title = "Usuario";
}
@using (Html.BeginForm("Usuario", "Usuario", FormMethod.Post))
{
    <div class="background" style="background-image: url('../../Content/Images/Ciudad-Z.jpg');">
        <div class="container">
            <div class="mini_container">
                <form class="form">
                    <span class="form_title">
                        Registrar usuario
                    </span>

                    <div class="image" data-tilt>
                        <img src="../../Content/Images/usuarios.jpg" alt="IMG">
                    </div>

                    <div class="input">
                        @Html.EditorFor(model => model.nombre_usuario, new { htmlAttributes = new { @class = "input100", @placeholder = "Nombre Usuario" } })
                        @Html.ValidationMessageFor(model => model.nombre_usuario, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="input">
                        @Html.EditorFor(model => model.contraseña, new { htmlAttributes = new { @class = "input100", @placeholder = "Contraseña" } })
                        @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                    </div>

                    <div class="image">
                        <button class="button">
                            Registrar
                        </button>
                    </div>

                    <div class="image">
                        <a href="../Usuario/LogIn" class="button">
                            Log In
                            <img src="~/Content/Images/Login.png" width="50px" height="50px" alt="IMG">
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
